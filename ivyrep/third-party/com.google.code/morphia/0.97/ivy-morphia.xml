<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="http://ivyrep.jayasoft.org/ivy-doc.xsl"?>
<ivy-module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://incubator.apache.org/ivy/schemas/ivy.xsd" version="1.3">

	<info organisation="com.google.code" module="morphia" revision="0.97" status="release"/>

	<configurations>
		<conf name="compile" visibility="public" description="Compile dependencies"/>
		<conf name="optional" visibility="public" extends="compile" description="Optional dependencies"/>
		<conf name="provided" visibility="public" description="Provided dependencies"/>
		<conf name="runtime" visibility="public" extends="compile" description="Runtime dependencies"/>
	</configurations>

	<publications>
		<artifact name="morphia" ext="jar"/>
		<artifact name="morphia-src" type="src" ext="jar"/>
		<artifact name="morphia-slf4j-logging" ext="jar"/>
		<artifact name="morphia-slf4j-logging-src" type="src" ext="jar"/>
		<artifact name="morphia-validation" ext="jar"/>
		<artifact name="morphia-validation-src" type="src" ext="jar"/>
		<artifact name="license" type="license" ext="txt"/>
	</publications>
	
	<dependencies>
		<dependency org="com.mongodb" name="mongo-driver" rev="2.3" conf="compile->compile"/>
	</dependencies>

</ivy-module>
